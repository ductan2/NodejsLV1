<div class="alert alert-success" role="alert">
    <span class="close-btn">&times;</span>
    Thay đổi Status thành công 
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-info">
            <div class="panel-heading">
                Search & Filter
                <a href="admin123/item">
                    <span
                        id="icon-reload"
                        class="glyphicon glyphicon-refresh"
                    ></span>
                </a>
            </div>

            <div class="panel-body">
                <div class="row">
                 
                    <div class="status-list col-sm-6 pl0">
                        <% include ./../../helpers/filter-status %>
                        <%- statusFilterHelper(statusFilter)%>
                    </div>
                    <div class="col-sm-6">
                        <form action="/<%= prefixAdmin %>/item/<%= currenStatus %>" method="GET">
                            <div class="input-group">
                                <input
                                    type="text"
                                    class="form-control"
                                    name="search"
                                    placeholder="Search for..."
                                    value=""
                                />
                                <input type="hidden" value="all" />

                                <span class="input-group-btn">
                                    <button class="btn btn-info" type="submit">
                                        Search
                                    </button>
                                </span>
                                <span class="input-group-btn">
                                    <button
                                        class="btn btn-success"
                                        type="button"
                                    >
                                        <a href="/<%= prefixAdmin %>/item">Clear</a>
                                    </button>
                                </span>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    

    <div class="col-lg-12">
        <div class="panel panel-info">
            <div class="panel-heading">List Items</div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <form
                    role="form"
                    class="form-inline zt-form"
                    id="zt-form"
                    action=""
                    method="post"
                >
                    <div class="zcontrols">
                        <select name="action" class="form-control slbAction">
                            <option value="">Bulk Action</option>
                            <option value="/<%= prefixAdmin %>/item/change-status/active">
                                Active
                            </option>
                            <option
                                value="/<%= prefixAdmin %>/item/change-status/inactive"
                            >
                                InActive
                            </option>
                            <option value="/<%= prefixAdmin %>/item/save-ordering/">
                                Change Ordering
                            </option>
                            <option value="/<%= prefixAdmin %>/item/delete/">
                                Delete
                            </option>
                        </select>
                        <button
                            class="btn btn-info btnAction"
                            type="button"
                            id="btn-action"
                            value="btnAction"
                            disabled
                        >
                            Apply
                        </button>
                        <div class="pull-right">
                            <a
                                href="/admin/item/add"
                                class="btn btn-warning btn-addNew"
                                >Add New
                            </a>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        <input type="checkbox" class="cbAll" />
                                    </th>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Status</th>
                                    <!-- <th width="30%">Content</th> -->
                                    <th>Ordering</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% include ./../../helpers/status %> <%
                                item.forEach((item,index)=>{%>
                                <!-- code here      -->
                                <tr>
                                    <td>
                                        <input
                                            type="checkbox"
                                            name="cid"
                                            value="<%= item.id %>"
                                        />
                                    </td>
                                    <td><%= index+1 %></td>
                                    <td><%= item.name %></td>
                                    <td>
                                       
                                        <%- statusHelper(item.status,item.id,"item") %>
                                    </td>
                                    <td>
                                        <input
                                            type="number"
                                            value="<%= item.odering%>"
                                            class="text-center ordering"
                                        />
                                    </td>
                                    <td>
                                        <a
                                            href="admin123/item/form/5a9e5a96da67bc078421d7d6"
                                            type="button"
                                            class="btn btn-warning btn-sm"
                                            >Edit</a
                                        />
                                        <a
                                            href="/<%= prefixAdmin %>/item/delete/<%=item.id%>"
                                            type="button"
                                            class="btn btn-danger btn-sm btn-delete"
                                            >Delete</a
                                        />
                                    </td>
                                </tr>
                                <%}) %>
                            </tbody>
                        </table>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-12">
        <% include ./../../helpers/pagination %>
        <%- paginationHelper("item")%>
    </div>
</div>
